@model RedRobin.WebApp.Models.Orders

@{
    ViewData["Title"] = "OrdersDetails";
}

<style>
    body {
        background-color: #fbefcc;
    }
</style>

<h1>Order Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.orderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.orderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.orderTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.orderTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.custName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.custName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.custPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.custPhone)
        </dd>
    </dl>
</div>

<div>
    @if (Model.products.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @* this and other lambdas for razor are never "actually executed" *@
                        @* they are just looked at by the rendering engine *@
                        @Html.DisplayNameFor(model => model.products.First().productName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.products.First().Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.products.First().TotalCost)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.products.First().QtyOrder)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.products)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.productName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QtyOrder)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>


