@model IEnumerable<RedRobin.WebApp.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<h1>Restaurants</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                
                @Html.ActionLink("✎", "Edit", new {  id=item.Id }, new { Class = "action add", title = "Edit" }) |
                @Html.ActionLink("🔍", "Details", new { id = item.Id }, new { Class = "action add", title = "Details" }) |
                @Html.ActionLink("🗑", "Delete", new { id = item.Id }, new { Class = "action add", title = "Delete" })
            </td>
        </tr>
}
    </tbody>
</table>
