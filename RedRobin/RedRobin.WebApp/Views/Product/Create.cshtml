@model RedRobin.WebApp.Models.Product

@{
    ViewData["Title"] = "Create";
}

@{
    List<SelectListItem> listTypes = new List<SelectListItem>();
    listTypes.Add(new SelectListItem
    {
        Text = "BURGER",
        Value = "BURGER"
    });
    listTypes.Add(new SelectListItem
    {
        Text = "DRINK",
        Value = "DRINK",
    });
    listTypes.Add(new SelectListItem
    {
        Text = "SIDE",
        Value = "SIDE"
    });
}

<style>
    body {
        background-color: #fbefcc;
    }
</style>

<h1>Create new the Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="productName" class="control-label"></label>
                <input asp-for="productName" class="form-control" />
                <span asp-validation-for="productName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.Type, listTypes, "-- Select Type --")
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

